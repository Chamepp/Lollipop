<!-- Navigation Bar -->
<div class="text-center">
  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">

    <header class="masthead mb-auto">
      <div class="inner">

        <div>
          <!-- Logo-->
          <h3 class="masthead-brand text-justify logo">Lollipop</h3>

          <!-- SignUp & Login Buttons -->
          <%= link_to "SignUp", signup_path, :class => 'btn btn-primary signup-button' %>
          <%= link_to "Login", home_path, :class => 'btn btn-primary login-button' %>

        </div>

        <!-- NavItems -->
        <nav class="nav nav-masthead justify-content-center navbar-static-top">


          <div class="nav-item">

            <%= link_to "Home", home_path %>
            <%= link_to "Post", showall_path %>
            <%= link_to "About", about_path %>

          </div>


        </nav>

      </div>
    </header>

  </div>

</div>


<!-- Middle Page -->
<main role="main" class="inner cover text-center">
  <h1 class="cover-heading main-title">A Lollipop For Bloggers</h1> <br> <br>
  <p class="lead">Lollipop is a nice template for building simple and beautiful blogging pages. <br> Download, edit and customize your blog, and add your own fancy wonders to your blog <br> and make it your own.</p>
  <p class="lead"> <br>
    <%= link_to "Start Blogging", new_post_path, :class => 'btn btn-primary' %>
  </p>
</main>


<!-- Footer -->
<footer class="index-footer">

  <!-- Icons Tags -->
  <div class="inner">

    <div class="footer-icons">

      <%= link_to "https://www.linkedin.com/in/ashkan-ebtekari-034b5b1a1/" do %>
          <%= image_tag("LinkedIn.png", :alt => "LinkedIn", :class => "footer-icons linkedin-icon") %>
      <% end %>

      <%= link_to "https://github.com/Chamepp" do %>
          <%= image_tag("GitHub.png", :alt => "GitHub", :class => "footer-icons") %>
      <% end %>

      <%= link_to "https://github.com/Chamepp" do %>
          <%= image_tag("YouTube.png", :alt => "YouTube", :class => "footer-icons youtube-icon") %>
      <% end %>

    </div>

  </div>

</footer>